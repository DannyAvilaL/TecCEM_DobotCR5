<launch>
  
  <!-- Load joint controller configurations from YAML file to parameter server -->
  <rosparam file="$(find cr5_gripper_moveit)/config/ros_controllers.yaml" command="load"/>

  <!-- Load the controllers -->
  <node name="controller_spawner" pkg="controller_manager" type="spawner" respawn="false"
    output="screen" ns="/cr5_gripper_robot/" args="joint_state_controller hand_controller arm_position_controller follow_joint_trajectory "/>

</launch>
